/* pages/rsslist.wxss */

.zan-col {
  background-color: #fff;
  height: 33vw;
  line-height: 15vw;
  text-align: center;
  padding-top: 80rpx;
  color: #333;
  position: relative;
  border-bottom: 1rpx solid #F3F3F3;
  border-left: 1rpx solid #F3F3F3;
}

.zan-col:nth-child(odd) {
  background-color: #fff;
}

.delete-box {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  right: 0;
}

.delete-bar {
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  top: 0;
  right: 0;
}

.delete {
  position: absolute;
  font-size: 28rpx;
  width: 34rpx;
  height: 34rpx;
  line-height: 32rpx;
  text-align: center;
  border-radius: 50%;
  background-color: red;
  top: 0;
  right: 0;
}

.avatar {
  width: 48rpx;
  height: 48rpx;
}

.rss-author {
  font-size: 24rpx;
}

.rss-add {
  font-size: 48rpx;
  padding-top: 60rpx;
}

.rss-more {
  font-size: 48rpx;
  padding-top: 48rpx;
}